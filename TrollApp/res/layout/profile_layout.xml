<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opaquecoffeecup"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:text="@string/profile"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- Name Label -->

    <TextView
        android:id="@+id/user_first_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_last_name"
        android:layout_below="@+id/textView1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/user_last_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/user_first_name"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="@string/tmp" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_last_name"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="@string/username" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_username"
        android:layout_marginTop="10dp"
        android:hint="@string/email_hint"
        android:singleLine="true" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diaryBtn"
        android:layout_alignLeft="@+id/diaryBtn"
        android:text="@string/logout_title"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/diaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/favBtn"
        android:layout_alignLeft="@+id/favBtn"
        android:layout_marginTop="5dp"
        android:text="@string/diary_title"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/favBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/favs"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_alignLeft="@+id/user_first_name"
        android:layout_below="@+id/user_email"
        android:src="@drawable/coffee_cup_half" />

</RelativeLayout>